@{
    var Articles = (List<ArticlesModel>)ViewData["Articles"];
    var authors = (List<UserModel>) ViewData["authors"];
    var p2 = "";
    var id = (int)ViewData["id"];


}



@foreach (var Article in Articles)
{

    var p = Article.Article_content;
    if (id == -1)
    {
        <div class="container Main-blog">
            <div class="row">
                <div class="col-sm">
                    <h2>
                        @Article.Article_title
                    </h2>
                    <br />
                    @foreach(var author  in authors)
                    {
                        if(Article.User_id == author.User_id)
                        {
                            <p class="fw-light">@author.UserName</p>
                        }
                    }
                    
                    <p style="color: #d0d1d0;font-size:15px">@Article.Created_at</p>
                   

                </div>
                <div class="col-sm">
                    @if (p.Length > 200)
                    {
                        p2 = p.Substring(0, 200) + " ...";
                    }
                    else
                    {
                        p2 = p;
                    }

                    <h6>@p2</h6>
                    <br />
                    <a href="/Articles/Details/@Article.Article_id"><button type="button" class="btn btn-outline-secondary">Read More</button></a>
                </div>
                <div class="col-sm">
                    <img src=@Article.Article_image width="350" height="200"  />
                </div>
            </div>
            <hr />
        </div>

    }
    else if (Article.User_id == id)
    {
        <div class="container Main-blog">
            <div class="row">
                <div class="col-sm">
                    <h2>
                        @Article.Article_title
                    </h2>
                    <br />

                    @foreach (var author in authors)
                    {
                        if (Article.User_id == author.User_id)
                        {
                            <p class="fw-light">@author.UserName</p>
                        }
                    }

                    <p style="color: #d0d1d0;font-size:15px">@Article.Created_at</p>

                </div>
                <div class="col-sm">
                    @if (p.Length > 200)
                    {
                        p2 = p.Substring(0, 200) + " ...";
                    }
                    else
                    {
                        p2 = p;
                    }

                    <h6>@p2</h6>
                    <br />
                    <a href="/Articles/Details/@Article.Article_id"><button type="button" class="btn btn-outline-secondary">Read More</button></a>
                </div>
                <div class="col-sm">
                    <img src=@Article.Article_image width="350" height="200" />
                </div>
            </div>
            <hr />
                      
        </div>

    }



}

